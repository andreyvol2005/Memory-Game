<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        Title="Игра на память" Height="600" Width="1000">
    <Window.Resources>
        <ControlTemplate x:Key="NoMouseOverButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"/>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.RowSpan="3" Grid.ColumnSpan="3"
                    VerticalAlignment="Center">
            <Image Source="/Images/backgrount.jpg" Width="1400"/>
        </StackPanel>

        <Button Name="info" Click="info_Click" Margin="10"
                Content="i" Width="50" Height="50"
                FontSize="35" FontWeight="Bold"
                VerticalAlignment="Top"
                HorizontalAlignment="Left">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
        </Button>
                
        <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Grid.Column="0" Grid.Row="0">
            <Button Name="LeftUpBotton" Width="200" Height="200"
                    Click="LeftUpBotton_Click"
                    Background="LightGray"
                    Template="{StaticResource NoMouseOverButtonTemplate}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="0"
                                      ShadowDepth="0"
                                      Color="LightYellow"/>
                </Button.Effect>
            </Button>
        </StackPanel>
        
        <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Grid.Column="1" Grid.Row="0">
            <Button Name="UpBotton" Width="200" Height="200"
                    Click="UpBotton_Click"
                    Background="LightGray"
                    Template="{StaticResource NoMouseOverButtonTemplate}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="0"
                                      ShadowDepth="0"
                                      Color="LightYellow"/>
                </Button.Effect>
            </Button>
        </StackPanel>
        
        <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Grid.Column="2" Grid.Row="0">
            <Button Name="RightUpBotton" Width="200" Height="200"
                    Click="RightUpBotton_Click"
                    Background="LightGray"
                    Template="{StaticResource NoMouseOverButtonTemplate}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="0"
                                      ShadowDepth="0"
                                      Color="LightYellow"/>
                </Button.Effect>
            </Button>
        </StackPanel>
        
        <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Grid.Column="0" Grid.Row="1">
            <Button Name="LeftDownBotton" Width="200" Height="200"
                    Click="LeftDownBotton_Click"
                    Background="LightGray"
                    Template="{StaticResource NoMouseOverButtonTemplate}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="0"
                                      ShadowDepth="0"
                                      Color="LightYellow"/>
                </Button.Effect>
            </Button>
        </StackPanel>
        
        <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Grid.Column="1" Grid.Row="1">
            <Button Name="DownBotton" Width="200" Height="200"
                    Click="DownBotton_Click"
                    Background="LightGray"
                    Template="{StaticResource NoMouseOverButtonTemplate}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="0"
                                      ShadowDepth="0"
                                      Color="LightYellow"/>
                </Button.Effect>
            </Button>
        </StackPanel>
        
        <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Grid.Column="2" Grid.Row="1">
            <Button Name="RightDownBotton" Width="200" Height="200"
                    Click="RightDownBotton_Click"
                    Background="LightGray"
                    Template="{StaticResource NoMouseOverButtonTemplate}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="0"
                                      ShadowDepth="0"
                                      Color="LightYellow"/>
                </Button.Effect>
            </Button>
        </StackPanel>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Grid.Column="0" Grid.Row="2"
                    Orientation="Horizontal">
            <Label Name="Score" Content="Счёт: 0" FontSize="40"
                   Background="LightGray" Width="200" Height="80"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center">
                <Label.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Label.Resources>
            </Label>
        </StackPanel>

        <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Grid.Column="1" Grid.Row="2">
            <Button Name="RestartButton" Width="200" Height="80"
                    Content="Начать" FontSize="35"
                    Click="RestartButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <Border Grid.Column="2" Grid.Row="2"
                CornerRadius="50" ClipToBounds="True"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10"
                                   Rect="0, 0, 240, 90"/>
            </Border.Clip>
            <StackPanel Orientation="Horizontal"
                        ClipToBounds="True">
                <Label FontSize="30" Background="LightGray"
                       Width="190"
                       HorizontalContentAlignment="Center">
                    <TextBlock>
                    Уровень<LineBreak/>Сложности
                    </TextBlock>
                </Label>
                <ComboBox Name="ComboBox" Width="50" Height="90"
                          BorderThickness="0" FontSize="20"
                          VerticalContentAlignment="Center">
                    <ComboBoxItem>3</ComboBoxItem>
                    <ComboBoxItem>5</ComboBoxItem>
                    <ComboBoxItem>10</ComboBoxItem>
                    <ComboBoxItem>15</ComboBoxItem>
                    <ComboBoxItem>20</ComboBoxItem>
                    <ComboBoxItem>25</ComboBoxItem>
                    <ComboBoxItem>30</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>
